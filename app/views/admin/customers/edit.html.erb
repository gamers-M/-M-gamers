<div class="container">
  <div class="row">
  <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
<%= form_with model: @customers, local:true do |f| %>
<div class="row">
  <div class="form-group"><h6>会員ID<%= @customer.id %></h6></div>
  </div>
  <div class="form-group">
        <%= f.label :氏名, class:"mr-4" %>
        <%= f.text_field :last_name, class:"mx-3" %>
        <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
        <%= f.label :フリガナ %>
        <%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postcode %>
  </div>
  <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
  </div>
  <div class="form-group">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number %>
  </div>
  <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email %>
  </div>
  <div class="form-group">
        <%= f.label :会員ステータス %>
        <%= f.text_field :is_deleted %>
  </div>
  <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>