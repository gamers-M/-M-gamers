<div class='container m-5'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <div class="font-weight-bold bg-info"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</div>
        <table style="line-height:3rem">
         <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td class="text-success font-weight-bold"><%= @customer.is_deleted ? '退会' : '有効'%></td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集する",edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
        <%= link_to "注文履歴一覧をみる",admin_path , class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

