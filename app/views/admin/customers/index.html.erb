<div class="container m-5">
  <h4 class="font-weight-bold bg-info">会員一覧</h4>
  <div class="row">
    <table class='table'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
           <tr>
             <td class="text-dark"><%= customer.id %></td>
             <td><%= link_to admin_customer_path(customer.id) do %>
               <%=  customer.last_name %><%= customer.first_name %>
               <% end %>
               </td>
             <td><%= customer.email %></td>
             <td class="text-success font-weight-bold"><%= customer.is_deleted ? '退会' : '有効'%></td>
           </tr>
        <% end %>
        <%= paginate @customers %>
      </tbody>
    </table>
  </div>
</div>
