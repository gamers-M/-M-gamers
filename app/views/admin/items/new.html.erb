<div class='container m-5'>
  <h1>商品新規登録</h1>
  <form class="form-horizontal">
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="form-group">
      <%= f.label :商品画像, class: "col-2 control-label" %>
      <%= f.file_field :image, accept: "image/*", class: "col-3" %>
    </div>
    <div class="form-group">
      <%= f.label :商品名, class: "col-2 control-label" %>
      <%= f.text_field :name, placeholder: '商品名', class: "col-3" %>
    </div>
    <div class="form-group">
      <%= f.label :商品説明, class: "col-2 control-label" %>
      <%= f.text_area :explanation, placeholder: 'ここに説明文を記述します', class: "col-3" %>
    </div>
    <div class="form-group">
      <%= f.label :ジャンル, class: "col-2 control-label" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"}, class: "col-3" %>
    </div>
    <div class="form-group">
      <%= f.label :税抜価格, class: "col-2 control-label" %>
      <%= f.number_field :price, placeholder: '1000', class: "col-3" %>円
    </div>
    <div class="form-group">
      <td class="mr-1">販売ステータス</td>
      <%= f.label :販売中 %>
      <%= f.radio_button :is_active, true %>
      <%= f.label :販売停止中 %>
      <%= f.radio_button :is_active, false %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  <% end %>
  </form>
</div>