<div class='container m-5'>
  <h1>商品一覧</h1>
  <div>
    <%= link_to '商品を追加する', new_admin_item_path, class: "float-right btn btn-primary" %>
  </div>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark border-bottom" %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>