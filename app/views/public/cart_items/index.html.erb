<h1>ショッピングカート</h1>
<div>
  <%= link_to 'カートを空にする', @cart_item, method: :delete, class: "float-right btn btn-danger" %>
</div>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(80,80) %> <%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item) do |f| %>
          <%= f.select :quantity, *[1..10] %>
          <%= f.submit '変更' %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      <td><%= link_to '削除する', cart_item, method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to '買い物を続ける', items_path, class: "btn btn-primary" %>
  <%= @total.round.to_s(:delimited)%>
</div>
