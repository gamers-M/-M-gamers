<div class="container my-5">
	<div class="row">
		<div class="offset-sm-1">
			<h2 class="red-border px-3 pb-1">マイページ</h2>
		</div>
	</div>
<br>
	<div class="row my-3">
		<div class="offset-sm-3">
			<strong class="red-border px-3 pb-1">登録情報</strong>
		</div>
	</div>
		<div class="row">
		    <%= link_to "編集する", customers_informetion_edit_path(@customer), class: "btn btn-outline-danger mx-auto my-1" %>
		  </div>
	</br>
	
	


	<div class="row">
	  <div class="offset-sm-4 col-sm-4">
	    <table class="table table-borderless table-hover">
	      <tr class="brown-border">
		    	<td>氏名</td>
		    	<td>
		    		<%= @customer.last_name %>
		    		<%= @customer.first_name %>
		    	</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>フリガナ</td>
		    	<td>
		    		<%= @customer.last_name_kana %>
		    		<%= @customer.first_name_kana %>
	    		</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>郵便番号</td>
		    	<td><%= @customer.postcode %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>住所</td>
		    	<td><%= @customer.address %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>電話番号</td>
		    	<td><%= @customer.phone_number %></td>
	      </tr>

	      <tr class="brown-border">
	    		<td>メールアドレス</td>
	        <td><%= @customer.email %></td>
	      </tr>
	    </table>

	  <div class="offset-sm-1 col-sm-3">
	    配送先
			<div class="row">
		 		<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn-outline-danger my-1" %>
		 	</div>
		 	注文履歴
		 	<div class="row">
				<%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-outline-danger my-1" %>
			</div>