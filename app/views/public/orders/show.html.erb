<div class='container m-5'>
<h1>注文詳細</h1>
<table class='table table-hover table-inverse'>
  <p>注文情報</p>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
      <th>配送先</th>
      <td><%= @order.address_display %></td>
    </tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
      <th>ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
</table>

<table class='table table-hover table-inverse'>
  <p>注文内容</p>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |f| %>
    <tr>
      <td><%= f.item.name %></td>
      <td><%= f.item.price %></td>
      <td><%= f.quantity %></td>
      <td><%= f.subtotal %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class='table table-hover table-inverse'>
  <p>請求情報</p>
    <tr>
      <th>商品合計</th>
      <td><%= @total %></td>
    </tr>
      <th>配送先</th>
      <td><%= @order.postage %></td>
    </tr>
      <th>ご請求額</th>
      <td><%= @order.billing_amount %></td>
</table>
</div