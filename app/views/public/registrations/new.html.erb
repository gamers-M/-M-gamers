<h2>Sign up</h2>

<%= form_with model:@customer,url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    名前
    <%= f.label :（姓） %>
    <%= f.text_field :last_name, placeholder: "令和", autofocus: true %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, placeholder: "道子", autocomplete: "off" %>
  </div>

  <div class="field">
    フリガナ
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, placeholder: "レイワ",  autocomplete: "off" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, placeholder: "ミチコ", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, placeholder: "sample@example.com",  autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, placeholder: "0000000",  autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0",  autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, placeholder: "00000000000",  autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
