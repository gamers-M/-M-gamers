<div class="container mt-5 mb-5">
  <div class="row shipping-new">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2>配送先登録/一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @address, local: true do |f| %>
      <table>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postcode, placeholder:"0000000", id: "customer_postcode" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", :size => "50", id: "customer_address" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :name, placeholder:"令和道子"%></td>
        　<td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row shipping-lists">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛先</th></th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_address_path(address.id),class: "btn btn-primary"%></td>
						<td><%= link_to "削除する", address_path(address.id),  class: "btn btn-danger", method: :delete %></td>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>